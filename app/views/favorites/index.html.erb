<div class="col-md-12">

  <h2 class="text-center"> My Favorite </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> 職位名稱 </th>
        <th> 職位描述 </th>

      </tr>
    </thead>

    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td> # </td>

          <td> <%= link_to(job.title, job_path(job)) %> </td>
          <td> <%= job.description %> </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
