<header id="home" data-spy="scroll" data-target="#top-nav">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="navbar navbar-default navbar-fixed-top default-menu menu-4" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                    <!--=== 右侧下拉选单（移动端） ===-->
                      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu-4" aria-expanded="false">
                          <span class="sr-only">Toggle navigation</span>
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>
                      </button>
          <a class="navbar-brand" href="/"><h4>24K金坷拉</h4></a>
        </div>

        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">

              <li><%= link_to("首頁", root_path, class: "scroll") %></li>
              <li><%= link_to("工作", jobs_path, class: "scroll") %></li>

            <li>

                <!-- search bar -->


                <div class="form-group form-inline search-bar">
             <%= form_tag search_jobs_path , :method => :get, :class => "navbar-form navbar-right" do %>
              <div class="input-group">
                <input type="text" class="form-control search-bar-input" name="q" placeholder="搜尋工作、公司、地點" value="<%= params[:q] %>" >

                  <span class="input-group-btn">
                    <button type="submit" class="btn btn-default search-bar-submit">
                      <i class="fa fa-search"></i>
                    </button>
                  </span>

                </div>
                <% end %>

              </div>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
                <li class="divider" role="separator"></li>


            <% if !current_user %>
            <li><%= button_to("登入", new_user_session_path, method: :get, class: "btn btn-default navbar-btn") %></li>

            <li><%= button_to("註冊", new_user_registration_path, method: :get, class: "btn btn-default navbar-btn") %> </li>

            <% else %>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Hi,bro <%= current_user.name %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <% if current_user.admin? %>
                  <li> <%= link_to(' Admin Jobs plats', admin_jobs_path) %> </li>
                  <li> <%= link_to(' My Favorites', favorites_path) %> </li>
                  <% end %>
                  <li> <%= link_to("Log Out", destroy_user_session_path, method: :delete) %> </li>

                </ul>
              </li>
            <% end %>

          </ul>
        </div>
      </div>
    </div>
</div>
</div>
</header>
