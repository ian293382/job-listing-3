<h1> Edit a job </h1>

<%= simple_form_for [:admin, @job] do |f| %>

<%= f.input :title%>
<%= f.input :description %>
<%= f.input :category, :label => "分類" %>
<%= f.input :location, :label => "地點" %>
<%= f.input :company, :label => "公司" %>
<%= f.input :wage_lower_bound, :label => "薪資下限" %>
<%= f.input :wage_upper_bound, :label => "薪資上限" %>
<%= f.input :contact_email, :label => "聯絡資訊" %>
<%= f.input :is_hidden %>

  <%= f.submit "Submit" %>
<% end %>
